<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <title>教学后台</title>
    <!-- css -->
    <%- include('../layout/Style') %>
  </head>

  <body class="hold-transition sidebar-mini">
    <div class="wrapper">
      <!-- Navbar -->
      <%- include('../layout/Navbar') %>
      <!-- /.navbar -->

      <!-- Main Sidebar Container -->
      <%- include('../layout/Asidebar') %>

      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <%- include('../layout/PageHeader', {main: '讲师管理', sub: '讲师添加'})
        %>
        <!-- /.content-header -->
        <!-- Main content -->
        <div class="content">
          <div class="container-fluid">
            <div class="row">
              <div class="card card-primary" style="width:50%; margin:0 auto">
                <div class="card-header">
                  <h3 class="card-title">添加新的讲师</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form role="form">
                  <div class="card-body">
                    <div class="form-group">
                      <label for="exampleInputEmail1">姓名</label>
                      <input type="text" class="form-control" id="exampleInputEmail1" placeholder="姓名" name="name">
                    </div>
                    <div class="form-group">
                      <label for="exampleInputPassword1">年龄</label>
                      <input type="text" class="form-control" id="exampleInputPassword1" placeholder="年龄" name="age">
                    </div>
                    <div class="form-group">
                      <label for="exampleInputPassword1">性别</label>
                      <select class="form-control" style="font-size:1rem; color:#787676;">
                        <option disabled value="-1">请选择</option>
                        <option value="1">男</option>
                        <option value="0">女</option>
                      </select>
                    </div>
                    <div class="form-group">
                      <label for="exampleInputPassword1">教龄</label>
                      <input
                      class="form-control"
                      type="text"
                      placeholder="教龄（年）"
                      name="teachAge"
                      
                    />
                    </div>
                    <div class="form-group">
                      <label for="exampleInputFile">头像</label>
                      <div class="input-group-append" style="width:100%">
                          <p class="help-block">
                              <img
                                id="avatarPreview"
                                width="64"
                                height="64"
                                src="/dist/img/avatar.png"
                                alt="预览"
                               
                              />
                            </p>
                      </div>
                      <div class="input-group">
                        <div class="custom-file">
                          <label class="custom-file-label" for="exampleInputFile">选择文件</label>
                          <input type="file" class="custom-file-input" id="avatar" name="avatar"  accept="image/*">

                        </div>
                       
                      </div>
                    </div>
                    <div class="form-check">
                      <input type="checkbox" class="form-check-input" id="exampleCheck1">
                      <label class="form-check-label" for="exampleCheck1">Check me out</label>
                    </div>
                  </div>
                  <!-- /.card-body -->
  
                  <div class="card-footer">
                    <button type="submit" class="btn btn-primary">提交</button>
                  </div>
                </form>
              </div>
            </div>
            <!-- /.row -->
          </div>
          <!-- /.container-fluid -->
        </div>
        <!-- /.content -->
      </div>
      <!-- /.content-wrapper -->

      <!-- Main Footer -->
      <%- include('../layout/Footer') %>
    </div>
    <!-- ./wrapper -->

    <!-- REQUIRED SCRIPTS -->
    <%- include('../layout/Script') %>
    <script src="/dist/js/teacher/add.js"></script>
  </body>
</html>
